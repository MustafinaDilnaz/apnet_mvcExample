@model IEnumerable<Book>
@{

}

<html>
    <body>
        <h3>Books</h3>
        <table>
            <tr>
                <td>Name</td>
@*                <td>Author</td>
*@                <td>Price</td>
                <td></td>
            </tr>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Name</td>
                        <td>@book.Price</td>
                        <td><a href="~/Book/Buy/@book.Id">Buy</a></td>
                        <td><a href="~/Book/Delete/@book.Id">Delete</a></td>
                        <td><a href="~/Book/Update/@book.Id">Update</a></td>
                        <td><a href="~/Book/Details/@book.Id">Details</a></td>
                    </tr>
                }
        </table>
        <a href="~/Book/Create">Create</a>
</body>
</html>
