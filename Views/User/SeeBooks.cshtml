@model IEnumerable<Book>
@{

}

<html>
    <body>
        <h3>@ViewBag.FirstName @ViewBag.LastName</h3>

        <table>
            <tr>
                <td>FirstName</td>
                <td>LastName</td>
                <td></td>
            </tr>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Name</td>
                        <td>@book.Price</td>
                    </tr>
                }
        </table>
</body>
</html>
