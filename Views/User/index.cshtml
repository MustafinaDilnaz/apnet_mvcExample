@model IEnumerable<User>
@{

}

<html>
    <body>
        <h3>Users</h3>
        <table>
            <tr>
                <td>FirstName</td>
                <td>LastName</td>
                <td></td>
            </tr>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td><a href="~/User/Details/@user.UserId">Details</a></td>
                        <td><a href="~/User/SeeBooks/@user.UserId">See books</a></td>

                    </tr>
                }
        </table>
</body>
</html>
